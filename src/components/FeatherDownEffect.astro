---
import Feather from '../images/feather.svg';
---

<div class="w-full h-full">
  <div class="absolute -z-1 top-0 left-0 right-0 bottom-0">
    <div class="relative w-full max-w-4xl mx-auto min-h-screen h-full">
      <img
        src={Feather.src}
        width="120"
        height="445"
        alt="feather"
        class="feather-left -z-1 blur-sm absolute left-0 -top-12 transform w-16 md:w-32"
      />
      <img
        src={Feather.src}
        width="120"
        height="445"
        alt="feather"
        class="feather-center-right -z-1 blur-md absolute right-2/3 -top-12 transform w-16 md:w-32"
      />
      <img
        src={Feather.src}
        width="120"
        height="445"
        alt="feather"
        class="feather-center-left -z-1 scale-125 blur-md absolute right-1/3 -top-12 transform w-16 md:w-32"
      />
    </div>
  </div>
  <slot />
</div>

<style>
  .feather-left {
    animation: animate 35s linear infinite;
  }

  .feather-center {
    animation: animate 23s linear infinite;
    animation-delay: 3s;
  }
  .feather-center-left {
    animation: animate 30s linear infinite;
    animation-delay: 5s;
  }

  .feather-right {
    animation: animate 45s linear infinite;
    animation-delay: 4s;
  }
  
  @keyframes animate {
    0% {
      opacity: 0;
      top: -10px;
      transform: translateX(20px) rotate(90deg);
    }
    10% {
      opacity: 1;
    }
    20% {
      transform: translateX(-20px) rotate(45deg);
    }
    40% {
      transform: translateX(-20px) rotate(90deg);
    }
    60% {
      transform: translateX(20px) rotate(180deg);
    }
    80% {
      transform: translateX(-20px) rotate(180deg);
    }
    100% {
      top: 110%;
      transform: rotate(90deg);
    }
  }
</style>
